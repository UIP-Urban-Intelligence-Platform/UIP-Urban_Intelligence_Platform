# Environment Configuration for Builder Layer End
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!
#Author: nguyễn Nhật Quang
#Created: 2025-11-23
# ==================== Python Configuration ====================
PYTHONPATH=.

# ==================== Application Settings ====================
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ==================== Data Directories ====================
DATA_DIR=data
CONFIG_DIR=config
LOGS_DIR=logs
ASSETS_DIR=assets

# ==================== Stellio Context Broker ====================
STELLIO_URL=http://localhost:8080
STELLIO_API_KEY=
STELLIO_TENANT=

# ==================== Neo4j Graph Database ====================
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# ==================== Kafka Message Queue ====================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=cim.entity
KAFKA_GROUP_ID=builder-layer-end

# ==================== Apache Jena Fuseki ====================
FUSEKI_URL=http://localhost:3030
FUSEKI_DATASET=traffic
FUSEKI_USER=admin
FUSEKI_PASSWORD=admin

# ==================== YOLOv8 Configuration ====================
YOLO_MODEL=assets/models/yolov8x.pt
YOLO_DEVICE=cpu  # cpu or cuda
YOLO_CONFIDENCE=0.25
YOLO_MAX_VEHICLES=15

# ==================== External APIs ====================
# OpenWeatherMap API (for weather data)
OPENWEATHERMAP_API_KEY=your_api_key_here
OPENWEATHERMAP_BASE_URL=https://api.openweathermap.org/data/2.5

# OpenAQ API (for air quality data)
OPENAQ_API_KEY=
OPENAQ_BASE_URL=https://api.openaq.org/v3

# ==================== Email Configuration ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourdomain.com

# ==================== Monitoring & Observability ====================
SENTRY_DSN=
PROMETHEUS_PORT=9090
METRICS_ENABLED=false

# ==================== Performance Tuning ====================
MAX_WORKERS=4
BATCH_SIZE=10
REQUEST_TIMEOUT=30
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2

# ==================== Security ====================
SECRET_KEY=change_this_to_a_random_secret_key
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ==================== Feature Flags ====================
ENABLE_SEEDING=true
ENABLE_CACHING=true
ENABLE_ASYNC_PROCESSING=true
